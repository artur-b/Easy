{% include 'header.twig' %}
    {% include 'navbar.twig' %}
    
    {% include 'admin/Menu.twig' with {'tab' : 3 } %}

    <div class="container-fluid content">

    <div class="container">
        <form action="admin/importOrders" method="post">
            <label class="btn btn-default btn-file">
                Importuj pliki <input id="xls" name="xls[]" type="file" multiple style="display:none">
            </label> 
        </form>

        <div class="table-responsive">
            <table class="table table-hover" id="myTable">
                <tr>
                    <th>#</th>
                    <th>Ambasador</th>
                    <th>Email</th>
                    <th>PESEL</th>
                    <th>Telefon</th>
                    <th>Rejestracja</th>
                    <th>Rejs</th>
                    <th>Kod</th>
                </tr>
                {% for order in orders %}
                <tr>
                    <td>{{ order.ID }}</td>
                    <td>{{ order.CustomerName }}</td>
                    <td>{{ order.CustomerEmail }}</td>
                    <td>{{ order.CustomerPesel }}</td>
                    <td>{{ order.CustomerPhone }}</td>
                    <td>{{ order.Created }}</td>
                    <td>{{ order.CruiseId }}</td>
                    <td>{{ order.Code }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>            
    </div><!-- /.container   -->

    </div>
{% include 'footer.twig' %}
