{% include 'header.twig' %}
    {% include 'navbar.twig' %}

    <div class="container-fluid content">

    <div class="container">
        <h2 class="custom">Witaj, {{ user.Name }}!</h2>
        {% if user.Verified %}
            <div class="well">
                <p>Twój identyfikator: <b>{{ user.Uid }}</b></p>
                <p>Twój kod ambasadorski: <b>{{ user.Key }}</b></p>                
                <p>Twoje kredyty: <b>0</b></p>
            </div>
            <form class="form-inline" action="{{ APP_URL }}/user/invite" method="POST">
                <div class="form-group">
                    <label for="inviteEmail">Email</label>
                    <input type="email" class="form-control" id="inviteEmail" name="inviteEmail" placeholder="Email">
                </div>            
                <button type="submit" class="btn btn-default">Wyślij kod</button>
                <div id="msgBox">
                {% if msg.success %}
                    <div class="alert alert-success">{{ msg.success }}</div>
                {% endif %}
                </div>
            </form>
            {% if user.Facebook %}    
                <a href="{{ fbUrl }}" class="btn btn-primary">Wyślij kod</a>
            {% else %}
                <a href="{{ fbUrl }}" class="btn btn-primary">Połącz z Facebookiem</a>
            {% endif %}
        {% else %}
            <div class="well">
                <p>Twoje konto nie zostało jeszcze aktywowane.</p>
                <p>Sprawdź skrzynkę pocztową i dokończ rejestrację klikając przesłany link.</p>
            </div>
        {% endif %}
    </div><!-- /.container   -->

    </div>
{% include 'footer.twig' %}
