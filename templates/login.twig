{% include 'header.twig' %}    
    <div class="container">
        <div class="panel panel-info loginPanel">
            <div class="panel-heading"><h3>Login</h3></div>
            <div class="panel-body">
                {% if error %}
                    <div class="alert alert-danger">{{error}}</div>
                {% endif %}                    
                <form class="form-signin" action="{{APP_URL}}/auth/signin" method="POST">
                    <label for="login" class="sr-only">Email</label>
                    <input type="email" id="login" name="login" class="form-control" placeholder="Email" required autofocus/>
                    <label for="password" class="sr-only">Hasło</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Hasło" required/>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Zaloguj</button>
                </form>
            </div>
        </div>
    </div><!-- /.container   -->
{% include 'footer.twig' %}
